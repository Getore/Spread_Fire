<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index" >

    <Button
    android:id="@+id/login_button"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:background="@color/colorLoginBackground"
    android:layout_gravity="right"
    app:layout_marginTopPercent="55%"
    app:layout_marginEndPercent="12%"
    app:layout_widthPercent="76%"
    app:layout_heightPercent="8%"
    android:text="登录"
    android:textSize="15sp"
    android:textColor="@color/colorWhite"
    />

    <Button
        android:id="@+id/register_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorRegister"
        android:layout_gravity="right"
        app:layout_marginTopPercent="65%"
        app:layout_marginEndPercent="12%"
        app:layout_widthPercent="76%"
        app:layout_heightPercent="8%"
        android:text="注册"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        />

    <Button
        android:id="@+id/index_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        app:layout_marginTopPercent="75%"
        app:layout_marginEndPercent="35%"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="8%"
        android:text="~游客观光~"
        android:textSize="15sp"
        android:textColor="@color/colorLookAround"
        />

</android.support.percent.PercentFrameLayout>
